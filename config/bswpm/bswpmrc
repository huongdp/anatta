#!/usr/bin/env bash

#### AUTOSTART ####
xsetroot -cursor_name left_ptr &
sxhkd &
picom --experimental-backends &
dunst &
feh --bg-fill .config/wallpaper.jpg &
setxkbmap -option caps:escape
~/.config/polybar/launch.sh &

#### MONITORS ####
xrandr --output DisplayPort-0 --primary --mode  3840Ã—2160 --rotate normal --output DisplayPort-1 --mode 1920x1080 --rotate right --left-of DisplayPort-0
bspc monitor DisplayPort-0 -d 1 2 3 4
bspc monitor DisplayPort-1 -d 5 6 7 8

#### BSPWM configuration ####
# bspc config border_radius                45
bspc config window_gap 			  10
bspc config top_padding                   24
bspc config top_monocle_padding 	  0
bspc config border_width 		  2
bspc config bottom_padding                0
bspc config left_padding                  0
bspc config right_padding                 0
bspc config single_monocle                true
bspc config click_to_focus                false
bspc config split_ratio                   0.50
bspc config borderless_monocle            true
bspc config gapless_monocle               true
bspc config focus_by_distance             true
bspc config paddingless_monocle  	  true
bspc config focus_follows_pointer         true
bspc config ignore_ewmh_focus 		  true
bspc config history_aware_focus           true
bspc config remove_disabled_monitors      true
bspc config merge_overlapping_monitors    true
bspc config pointer_modifier mod1
bspc config pointer_action1 move
bspc config pointer_action2 resize_side
bspc config pointer_action3 resize_corner

# Colors
bspc config active_border_color \#8FBCBB
bspc config focused_border_color \#4C566A
bspc config normal_border_color \#2E3440

# Rules

bspc rule -a init_firefox desktop='^2'
bspc rule -a init_vivaldi desktop='^2'
bspc rule -a discord desktop='^8'
bspc rule -a feh state='floating'
bspc rule -a mpv state='floating'
bspc rule -a Zathura state='tiled'
bspc rule -a Pavucontrol state='floating'
bspc rule -a flameshot state='floating'
bspc rule -a *:SPLASH state=floating
bspc desktop -f 1
